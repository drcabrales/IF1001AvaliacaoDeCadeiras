<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ufpe.com.br.avaliacaodecadeiras.AvaliarCadeirasFragment">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg3">

        <LinearLayout
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="NomeCadeira"
                    android:id="@+id/txtNomeCadeiraAvaliacao" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="NomeProfessor"
                    android:id="@+id/txtProfessorAvaliacao" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:gravity="center_vertical|center_horizontal">
                <CheckBox android:id="@+id/favoriteAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:button="@drawable/star"
                    android:focusable="false"
                    android:background="#00ffffff"
                    android:layout_weight="0.3"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avalie a cadeira:"
            android:textSize="16sp"
            android:id="@+id/txtopinar" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/listCategoriaavaliacaoAvaliacao" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comente sobre esta cadeira:"
            android:textSize="16sp"
            android:id="@+id/txtcomenteAvaliacao" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edtcomentarioAvaliacao" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnsalvarAvaliacao"

                android:textColor="#FFFFFF"
                android:textSize="12sp"

                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/buttonshape"
                android:shadowColor="#7C8EA8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Salvar" />

            <Button
                android:id="@+id/btnvoltaravAliacao"

                android:textColor="#FFFFFF"
                android:textSize="12sp"

                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/buttonshape"
                android:layout_marginLeft="25dp"
                android:shadowColor="#7C8EA8"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="5"
                android:text="Voltar" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
